{
  "version": 2,
  "rewrites": [
    {
      "source": "/",
      "destination": "/public/index.html"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/public/$1"
    }
  ],
  "functions": {
    "api/quote.js": {
      "memory": 128
    },
    "api/vapid-public-key.js": {
      "memory": 128
    },
    "api/subscribe.js": {
      "memory": 128
    },
    "api/send-notification.js": {
      "memory": 128
    },
    "api/cron-notify.js": {
      "memory": 128
    }
  },
  "crons": [
    {
      "path": "/api/cron-notify",
      "schedule": "0 0 * * *"
    }
  ]
}